<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_darker_black"
    >
    <TextView
        android:id="@+id/header_title_results"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Spoils of war!"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:textSize="30sp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/header_title_results"
        android:id="@+id/recycler_robotron_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/viewholder_robotron_results_listitem"
        >
    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_backdp"
        android:background="@drawable/fab_shape"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        />
</RelativeLayout>