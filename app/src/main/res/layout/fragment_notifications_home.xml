<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
       android:id="@+id/holder_header"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="@drawable/bg_white_border_gradient_dark"
       android:layout_margin="2dp"

       android:orientation="horizontal">
       <ImageView
           android:id="@+id/iv_notif_menu"
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@drawable/icon_menu_vert_24dp"
           android:layout_margin="6dp"
           android:layout_gravity="center"
           />
       <TextView
           android:id="@+id/iv_notif_header"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="50dp"
           android:text="Notifications"
           android:textSize="25sp"
           android:textStyle="bold"
           android:typeface="sans"
           android:textColor="@color/text_color"
           android:gravity="center"
           />
       <ToggleButton
           android:id="@+id/tog_subscribe"
           android:layout_width="30dp"
           android:background="@drawable/check"
           android:layout_height="30dp"
           android:layout_marginEnd="10dp"
           android:layout_gravity="center"
           android:textOn=""
           android:textOff=""
           android:focusable="false"
           android:focusableInTouchMode="false"
           />
   </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/holder_header"
        android:id="@+id/notification_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/viewholder_notification_item"
        >
    </android.support.v7.widget.RecyclerView>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu_icon="@drawable/icon_results_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        app:menu_labels_colorNormal="#333333"
        app:menu_labels_colorPressed="#444444"
        app:menu_labels_colorRipple="#66FFFFFF"
        app:menu_animationDelayPerItem="200"
        app:menu_colorNormal="#d6502f"
        app:menu_colorPressed="#e17358"
        app:menu_colorRipple="#e6a493"
        app:menu_fab_label="results"

        >
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_others_results"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_others_temp_24dp"
            app:fab_size="mini"
            app:fab_label="Others"
            app:fab_colorNormal="@color/fab_normal"
            app:fab_colorPressed="@color/fab_pressed"
            app:fab_colorRipple="@color/fab_ripple"
            />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_robotron_results"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_robotron_24dp"
        app:fab_size="mini"
        app:fab_label="Robotron"
        app:fab_colorNormal="@color/fab_normal"
        app:fab_colorPressed="@color/fab_pressed"
        app:fab_colorRipple="@color/fab_ripple"
        />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_conferenza_results"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_conferanza_24dp"
            app:fab_size="mini"
            app:fab_label="Empressario"
            app:fab_colorNormal="@color/fab_normal"
            app:fab_colorPressed="@color/fab_pressed"
            app:fab_colorRipple="@color/fab_ripple"
            />

    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>