<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_lighter_black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_dark_gradient"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:src="@mipmap/ic_launcher"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/text_color"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:gravity="start"
            tools:text="Hello,\nMairing Tenx Hojai" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_bg"
            android:text="logout"
            android:textColor="@color/text_color"
            android:layout_marginEnd="30dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dark_gradient_no_border"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="QR SCORE : 0"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="25sp"
            android:padding="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/scanner_bar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_center_focus_weak_black_24dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sponsors"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_dark_gradient_no_border"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="SPONSERS"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:layout_marginBottom="5dp"
        android:textSize="22sp" />
    <ToggleButton
        android:id="@+id/tog_team"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_dark_gradient_no_border"
        android:fontFamily="serif"
        android:gravity="center"
        android:textOn="TEAM"
        android:textOff="TEAM"
        android:textAlignment="center"
        android:textColor="@color/text_color"

        android:textSize="22sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/tv_policy"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_dark_gradient_no_border"
            android:fontFamily="serif"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="Privacy policy"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_color"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>
