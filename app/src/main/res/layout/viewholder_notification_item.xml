<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="100dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/background_darker_black"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="3dp"
                android:src="@drawable/icon_notif_24dp"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/notification_textview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    tools:text="This is a test notification\n that should appear in two lines" />
                <TextView
                    android:id="@+id/tv_notif_time"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="textStart"
                    tools:text="28 minutes ago"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>